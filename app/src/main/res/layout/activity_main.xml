                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/time_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Uhrzeit"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Bahnanzeige"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_relais1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Relais 1"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button_relais2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Lichterkette"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_arduino1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Arduino 1"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button_arduino2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Arduino 2"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/debugSelector"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".50"
                                android:background="@drawable/custom_rectangle_rounded_corners"
                                android:backgroundTint="@color/dark_yellow"
                                android:text="Debug"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/button_songtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:drawableLeft="@android:drawable/arrow_up_float"
                            android:text="Songtitel"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button_weather"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Wetter"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button_standby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Standby"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/button_quit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/custom_rectangle_rounded_corners"
                            android:backgroundTint="@color/dark_yellow"
                            android:text="Quit"
                            android:textSize="@dimen/text_size" />



                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/button_bikeActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_rectangle_rounded_corners"
                android:text="Fahrrad Fahrt hinzufügen"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/teal_700" />


            <Button
                android:id="@+id/button_plantoverviewActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/custom_rectangle_rounded_corners"
                android:text="Pflanzen"
                android:textSize="@dimen/text_size"
                app:backgroundTint="@color/teal_700" />


        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_settingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/icon_gear" />

    <TextView
        android:id="@+id/textViewSources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sources"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>