<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RPICommunicator_V1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_darker</item>
        <item name="colorOnPrimary">@color/text_color</item>  <!-- Text color in edit texts-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_green_palette</item>
        <item name="colorSecondaryVariant">@color/primary_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/red</item>
    </style>

    <style name="Theme.RPICommunicator_V1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="greenFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="white_card_view" parent="CardView">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">5sp</item>
        <item name="android:backgroundTint">@color/background_color_card_view</item>
    </style>

    <style name="edit_text_border" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="image_view_container" >
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/custom_rectangle_rounded_corners</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

</resources>